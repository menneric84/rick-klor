# Main configuration for rickKlor custom drivers

config ZMK_TRACKBALL_PIM447
    bool "Enable Pimoroni PIM447 trackball sensor"
    default y if RICK_KLOR_RIGHT
    select I2C
    select SENSOR
    help
      Enable support for the Pimoroni PIM447 trackball sensor.

if ZMK_TRACKBALL_PIM447

# Include the driver-specific Kconfig
rsource "drivers/sensor/trackball_pim447/Kconfig"

endif # ZMK_TRACKBALL_PIM447